@model List<Otzivi.Models.Review>
@{
    ViewData["Title"] = "Мои отзывы";
}

<div class="container">
    <h1>Мои отзывы</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Вы еще не оставляли отзывов.
        </div>
    }
    else
    {
        foreach (var review in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">
                            <a href="@Url.Action("Details", "Product", new { id = review.ProductId })">
                                @review.Product.Name
                            </a>
                        </h5>
                        <div class="text-warning">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fas fa-star@(i <= review.Rating ? " text-warning" : "-o text-muted")"></i>
                            }
                        </div>
                    </div>
                    <h6 class="card-subtitle mb-2">@review.Title</h6>
                    <p class="card-text">@review.Content</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">@review.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                        <div>
                            <span class="badge bg-primary">👍 @review.LikesCount</span>
                            <span class="badge bg-secondary">👎 @review.DislikesCount</span>
                            @if (review.IsVerifiedPurchase)
                            {
                                <span class="badge bg-success">Проверенная покупка</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}