@model Otzivi.ViewModels.CreateReviewViewModel
@{
    ViewData["Title"] = "Написать отзыв";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Отзыв на @Model.ProductName</h1>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" asp-for="ProductName" />

                <div class="mb-3">
                    <label asp-for="Rating" class="form-label">Рейтинг</label>
                    <div>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Rating" value="@i" id="rating@i">
                                <label class="form-check-label" for="rating@i">
                                    @for (int j = 1; j <= i; j++)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                </label>
                            </div>
                        }
                    </div>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Заголовок отзыва</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label">Текст отзыва</label>
                    <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsVerifiedPurchase" class="form-check-input" />
                    <label asp-for="IsVerifiedPurchase" class="form-check-label">Это проверенная покупка</label>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-success">Опубликовать отзыв</button>
                    <a href="@Url.Action("Details", "Product", new { id = Model.ProductId })" class="btn btn-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <partial name="_ValidationScriptsPartial" />
}